{
  "name"         : "apii",
  "version"      : "0.2",
  "title"        : "API Inspector",
  "template"     : "module/layout.html",
  "class"        : "apii.Module",
  "scripts"      : ["module/index.js", "module/send.js", "module/agent-client.js", "xml/jsdom.js", "xml/utils.js", "xml/wsdl.js", "xml/xsd.js"],
  "style"        : "module/index.css",
  
  "manifest"     :
  {

  },

  "includes":
  {
    "scripts"    : ["../app.js"],
    "styles"     : ["../app.css"]
  },
  
  "views": 
  {
    "ws":
    {
      "class"    : "apii.view.Workspace",
      "template" : "ws/view.html",
      "script"   : "ws/view.js",
      "style"    : "ws/view.css"
    }
  },

  "routes":
  {
    "/ws"     : {"view": "ws", "default": true},
    "/ws/@id" : {"view": "ws"},
    "/soap"   : {"view": "soap"}
  },

  "fragments":
  [
    "ws/navigator.html",
    "ws/tabs.html",
    "ws/inspection-tab.html"
  ],

  "data":
  {
    "lovs":
    {
      "httpMethods":
      [
        {"value" : "GET", "label" : "GET"},
        {"value" : "PUT", "label" : "PUT"},
        {"value" : "POST", "label" : "POST"},
        {"value" : "DELETE", "label" : "DELETE"},
        {"value" : "PATCH", "label" : "PATCH"},
        {"value" : "OPTIONS", "label" : "OPTIONS"}
      ],
      "authHeaderType":
      [
        {"value": "basic", "label": "Basic"},
        {"value": "bearer", "label": "Bearer"}
      ]      
    },

    "agent-package": "https://github.com/prthan/apii/releases/download/v0.2-alpha/apii-agent.zip"
  }

}